<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Uber Feast - Home</title>
    <link rel="icon" href="assets/img/favicon.png">

    <link rel="stylesheet" href="style.css">

    <style>
        main {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
    </style>
</head>

<body>
    <div id="nav">
        <img id="logo" src="assets/img/logo.png">
        <div id="nav_links">
            <a href="/" class="selected">
                <h2>Home</h2>
            </a>
            <a href="/users">
                <h2>Users</h2>
            </a>
            <% if (user) { %>
                <a href="/order">
                    <h2>Order</h2>
                </a>
                <% } %>
        </div>

        <% if (!user) { %>
            <div id="login_button">
                <a class="sub_nav_links" href="/register">
                    <h2 class="sub_nav_text">Register</h2>
                </a>
                <a class="sub_nav_links" href="/login">
                    <h2 class="sub_nav_text">Login</h2>
                </a>
            </div>
            <% } else { %>
                <div id="profil_menu">
                    <a href="/users/<%= user._id %>" id="profil_picture">
                        <img src="assets/img/profil_picture.jpg" id="profil_picture">
                    </a>
                    <a href="/logout" class="links" id="profil_logout">
                        <h3>Logout</h3>
                    </a>
                </div>
                <% } %>
    </div>
    <main>
        <h1 id="slogan">Want food? Get food.</h1>
        <div>
            <input id="delivery_address" type="text" placeholder="Enter delivery address">
            <a id="find_food_link" href="/order">Find food</a>
        </div>
    </main>
</body>

</html>